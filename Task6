<body>
  <header>
    <h1>Advanced Styling and JavaScript</h1>
  </header>
  <div class="container">
    <h2>Image Carousel</h2>
    <div class="carousel">
      <img src="https://picsum.photos/id/237/600/400" class="active">
      <img src="https://picsum.photos/id/238/600/400">
      <img src="https://picsum.photos/id/239/600/400">
    </div>
    <button onclick="prevImage()">Prev</button>
    <button onclick="nextImage()">Next</button>

    <div class="quiz">
      <h2>Quick Quiz</h2>
      <p id="question">What is 2 + 2?</p>
      <button onclick="checkAnswer(3)">3</button>
      <button onclick="checkAnswer(4)">4</button>
      <button onclick="checkAnswer(5)">5</button>
      <p id="result"></p>
    </div>

    <h2>API Data</h2>
    <button onclick="fetchJoke()">Get Random Joke</button>
    <div class="api-data" id="joke"></div>
  </div>

  <script>
    let images = document.querySelectorAll(".carousel img");
    let index = 0;
    function showImage(i) {
      images.forEach(img => img.classList.remove("active"));
      images[i].classList.add("active");
    }
    function prevImage() {
      index = (index - 1 + images.length) % images.length;
      showImage(index);
    }
    function nextImage() {
      index = (index + 1) % images.length;
      showImage(index);
    }

    function checkAnswer(answer) {
      let result = document.getElementById("result");
      if (answer === 4) result.textContent = "Correct!";
      else result.textContent = "Wrong, try again!";
    }

    async function fetchJoke() {
      let res = await fetch("https://official-joke-api.appspot.com/random_joke");
      let data = await res.json();
      document.getElementById("joke").textContent = data.setup + " - " + data.punchline;
    }
  </script>
</body>
